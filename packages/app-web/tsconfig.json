{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": "src/",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "types": ["vite/client"]
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  },
  "include": ["src/"],
  "exclude": ["src/**/*.spec.ts"],
  "references": [
    {
      "path": "./tsconfig.dev.json"
    }
  ]
}
