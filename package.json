{
  "name": "white-rabbit",
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "yarn@3.6.1",
  "engines": {
    "yarn": ">=3",
    "node": ">=20"
  },
  "workspaces": [
    "packages/frontend-core",
    "packages/app-desktop"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:rs": "cargo build --workspace --release",
    "build:js": "yarn workspaces foreach -pitv --exclude white-rabbit run build",
    "build": "yarn build:js && yarn build:rs",
    "lint:rs": "cargo fmt --check && cargo clippy",
    "lint:stylelint": "stylelint '**/*.{vue,scss,css}' --ignore-path .eslintignore",
    "lint:base:prettier": "prettier '**/*.{vue,ts,js,cjs,json}' --ignore-path .eslintignore",
    "lint:prettier": "yarn lint:base:prettier --check",
    "lint:eslint": "eslint '**/*.{vue,ts,js,cjs}'",
    "lint:tsc": "yarn workspaces foreach -pitv --exclude white-rabbit run lint:tsc",
    "lint:fix:prettier": "yarn lint:base:prettier --write",
    "lint:fix:eslint": "yarn lint:eslint --fix",
    "lint:fix:stylelint": "yarn lint:stylelint --fix",
    "lint:fix:rs": "cargo sort -w && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:fix": "yarn lint:fix:eslint && yarn lint:fix:stylelint && yarn lint:fix:rs && yarn lint:fix:prettier",
    "lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier && yarn lint:tsc && yarn lint:rs",
    "upgrade": "yarn upgrade-interactive && cargo update && cargo upgrade --incompatible --pinned",
    "test": "cargo test",
    "test:coverage": "rimraf target/debug/coverage; yarn test:coverage:test && yarn test:coverage:generate -t html -o target/debug/coverage/ && yarn test:coverage:generate -t lcov -o target/debug/coverage/lcov.info && yarn test:coverage:clean",
    "test:coverage:test": "RUSTFLAGS='-Cinstrument-coverage' LLVM_PROFILE_FILE='coverage-%p-%m.profraw' cargo test",
    "test:coverage:generate": "grcov . -s . --binary-path ./target/debug/ --branch --keep-only 'packages/*'",
    "test:coverage:clean": "rimraf *.profraw; rimraf packages/**/*.profraw"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@intlify/unplugin-vue-i18n": "^0.12.2",
    "@mdi/js": "^7.2.96",
    "@types/eslint": "^8.44.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.4",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^0.33.0",
    "@vue/compiler-dom": "^3.3.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.7",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.1.1",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "markdownlint-cli": "^0.35.0",
    "postcss": "^8.4.27",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.64.1",
    "sass-loader": "^13.3.2",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-vuetify": "^1.0.2",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
