{
  "name": "white-rabbit",
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/frontend-shared",
    "packages/app-desktop",
    "packages/app-web"
  ],
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "build": "yarn build:endpoint-graphql && yarn build:app-desktop",
    "build:endpoint-graphql": "cargo build -p endpoint-graphql --bin endpoint-graphql --release",
    "build:app-desktop": "yarn workspace @white-rabbit/app-desktop run build",
    "build:app-desktop:vue": "yarn workspace @white-rabbit/app-desktop run build:vue",
    "test": "cargo test",
    "test:coverage": "rimraf target/debug/coverage; yarn test:coverage:test && yarn test:coverage:generate -t html -o target/debug/coverage/ && yarn test:coverage:generate -t lcov -o target/debug/coverage/lcov.info && yarn test:coverage:clean",
    "test:coverage:test": "RUSTFLAGS='-Cinstrument-coverage' LLVM_PROFILE_FILE='coverage-%p-%m.profraw' cargo test",
    "test:coverage:generate": "grcov . -s . --binary-path ./target/debug/ --branch --keep-only 'packages/*'",
    "test:coverage:clean": "rimraf *.profraw; rimraf packages/**/*.profraw",
    "lint": "yarn lint:rs && yarn lint:workspaces && yarn lint:js",
    "lint:rs": "cargo fmt --check && cargo clippy",
    "lint:workspaces": "yarn workspaces foreach -pit --include '@white-rabbit/*' run lint",
    "lint:js": "yarn lint:js:eslint && yarn lint:js:style && yarn lint:js:prettier",
    "lint:js:style": "stylelint \"packages/**/*.{vue,scss,css}\"",
    "lint:js:prettier": "prettier --no-config --check \"{packages/**/*,*}.{js,cjs,ts,jsx,tsx,vue,json}\"",
    "lint:js:eslint": "eslint . --ext .js,.cjs,.json",
    "lint:fix": "yarn lint:fix:rs && yarn lint:fix:workspaces && yarn lint:fix:js",
    "lint:fix:rs": "cargo sort -w && cargo fmt && cargo clippy --fix --allow-dirty --allow-staged",
    "lint:fix:workspaces": "yarn workspaces foreach -pit --include '@white-rabbit/*' run lint:fix",
    "lint:fix:js": "yarn lint:js:eslint --fix && yarn lint:js:prettier --write && yarn lint:js:style --fix",
    "upgrade": "yarn upgrade-interactive && cargo update && cargo upgrade --incompatible --pinned"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@intlify/vite-plugin-vue-i18n": "^7.0.0",
    "@mdi/js": "^7.2.96",
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitest/coverage-c8": "^0.29.8",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.3.2",
    "autoprefixer": "^10.4.14",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-vue": "^9.10.0",
    "husky": "^8.0.3",
    "markdownlint-cli": "^0.33.0",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "stylelint": "^15.3.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vuetify": "^1.0.2",
    "vue-eslint-parser": "^9.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
